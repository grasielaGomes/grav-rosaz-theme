
{% set section = page.header.about_menu ?? {} %}
{% if section.enabled and section.items is iterable and section.items|length %}
  {% set items = section.items %}
  <section class="py-16">
    <div class="max-w-6xl mx-auto px-4">
      {# Header #}
      <div class="text-center max-w-3xl mx-auto mb-12">
        {% if section.eyebrow %}
          <p class="text-xs font-semibold tracking-[0.25em] uppercase text-orange-400 mb-3">
            {{ section.eyebrow }}
          </p>
        {% endif %}

        {% if section.title %}
          <h2 class="text-2xl md:text-3xl font-semibold text-neutral-900 mb-3">
            {{ section.title }}
          </h2>
        {% endif %}

        {% if section.subtitle %}
          <p class="text-sm md:text-base text-neutral-600">
            {{ section.subtitle }}
          </p>
        {% endif %}
      </div>

      {# Cards container - centered, wraps nicely for 2 or 3 items #}
      <div class="flex flex-wrap justify-center gap-8">
        {% for item in items %}
          {% set icon_name = item.icon ?? null %}
          {% set icon_url = icon_name ? page.media[icon_name].url|default('') : '' %}

          <a
            href="{{ item.link|default('#') }}"
            class="group flex flex-col items-center text-center gap-4 max-w-[220px]"
          >
            <div class="relative">
              {# Circle with image as background #}
              <div
                class="h-28 w-28 rounded-full bg-orange-50 bg-center bg-cover bg-no-repeat shadow-sm
                       transform transition-all duration-300 ease-out
                       group-hover:scale-110"
                style="{{ icon_url ? 'background-image: url(' ~ icon_url ~ ');' : '' }}"
              >
                {# Fallback icon if no image #}
                {% if not icon_url %}
                  <span class="flex h-full w-full items-center justify-center text-2xl text-orange-500">
                    â™¡
                  </span>
                {% endif %}
              </div>
            </div>

            {% if item.title %}
              <h3 class="text-sm font-semibold text-neutral-600 group-hover:text-orange-500 transition-colors duration-300">
                {{ item.title }}
              </h3>
            {% endif %}

            {% if item.text %}
              <p class="text-xs md:text-sm text-neutral-600 leading-relaxed">
                {{ item.text }}
              </p>
            {% endif %}
          </a>
        {% endfor %}
      </div>
    </div>
  </section>
{% endif %}
