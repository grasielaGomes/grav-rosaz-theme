{% set section_title = title ?? null %} {% set items = items ?? [] %} {% if
items|length %}
<section class="py-12 md:py-16 bg-neutral-50">
  <div class="max-w-6xl mx-auto px-4">
    {% if section_title %}
    <h2
      class="text-2xl md:text-3xl lg:text-4xl font-heading font-semibold text-neutral-900 text-center mb-10"
    >
      {{ section_title }}
    </h2>
    {% endif %}

    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-4">
      {% for item in items %} {% set raw_icon = item.icon ?? null %} {% set icon
      = null %} {% if raw_icon %} {% if page.media[raw_icon] is defined %}
      {% set icon = page.media[raw_icon].url %} {% else %} {% set icon =
      raw_icon %} {% endif %} {% endif %} {% set card_title = item.title ?? ''
      %} {% set card_text = item.text ?? '' %} {% set card_link = item.link ??
      null %}

      <article
        class="group bg-transparent rounded-3xl border border-neutral-200 shadow-sm px-6 py-8 flex flex-col justify-between transition-all duration-800 hover:-translate-y-1 hover:shadow-xl hover:border-orange-500 hover:bg-white"
      >
        <div>
          {% if icon %}
          <div
            class="inline-flex items-center justify-center"
          >
            <img src="{{ url(icon) }}" alt="" class="h-20 w-20 object-contain" />
          </div>
          {% endif %}

          <h3
            class="text-lg font-heading font-semibold text-neutral-900 mb-3 group-hover:text-orange-500"
          >
            {{ card_title }}
          </h3>

          {% if card_text %}
          <p
            class="text-sm text-neutral-600 leading-relaxed"
          >
            {{ card_text }}
          </p>
          {% endif %}
        </div>

        {% if card_link %}
        <a
          href="{{ card_link }}"
          class="mt-6 inline-flex items-center text-xs font-semibold tracking-[0.18em] uppercase text-neutral-500 group-hover:text-orange-500"
        >
          {{ 'ROSAZ.READ_MORE'|t|default('Saiba mais') }}
          <span
            class="ml-2 inline-block transform transition-transform duration-600 group-hover:translate-x-1 group-hover:text-orange-500"
          >
            &rarr;
          </span>
        </a>
        {% endif %}
      </article>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}
