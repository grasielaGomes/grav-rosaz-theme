{% extends 'partials/base.html.twig' %}

{% block content %}

  {# CONTENT 1 #}
  {% set section_top = page.header.section_top ?? {} %}
  {% include 'partials/content_section.html.twig' with { section: section_top } %}

  {# GALLERY STRIP #}
  {% set gallery = page.header.gallery_strip ?? {} %}
  {% if gallery and (gallery.enabled is not defined or gallery.enabled) %}
    {% include 'partials/gallery_strip.html.twig' with { gallery: gallery } %}
  {% endif %}

  {# TESTIMONIALS #}
  {% if page.header.testimonials is defined %}
    {% include 'partials/testimonials.html.twig' %}
  {% endif %}

    {# PARALLAX BANNER #}
  {% set banner = page.header.parallax_banner ?? {} %}
  {% if banner and (banner.enabled is not defined or banner.enabled) %}
    {% include 'partials/parallax_banner.html.twig' with {
      image:         banner.image ?? null,
      overlay_color: banner.overlay_color ?? null,
      eyebrow:       banner.eyebrow ?? null,
      title:         banner.title ?? null,
      text:          banner.text ?? null,
      cta_label:     banner.cta.label ?? null,
      cta_link:      banner.cta.link ?? null,
      align:         banner.align ?? 'center'
    } %}
  {% endif %}

  

  {# CONTENT 2 #}
  {% set section_bottom = page.header.section_bottom ?? {} %}
  {% include 'partials/content_section.html.twig' with { section: section_bottom } %}

{% endblock %}
